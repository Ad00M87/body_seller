<div class="ui container">
  <div class="ui grid">
    <div class="five wide column">
      <%= @cadaver.first_name %>, <%= @cadaver.age %>
      <br>
      <% if @cadaver.healthy? %>
        <%= "Healthy, " %>
      <% else %>
        <%= "Diseased, " %>
      <% end %>
      <% if @cadaver.fresh? %>
        <%= "Fresh, " %>
      <% else %>
        <%= "Rotting, " %>
      <% end %>
      <% if @cadaver.whole? %>
        <%= "Complete." %>
      <% else %>
        <%= "Pieces." %>
      <% end %>
      <br><br>
      <%= @cadaver.description %>
    </div>
    <div class="eight wide column">
      <%= "This will be a picture someday" %>
    </div>
    <div class="three wide column">
      <%= link_to "Edit", edit_cadaver_path(@cadaver) %>
      <%= link_to "Delete", cadaver_path(@cadaver), method: :delete %>
    </div>
  </div>
</div>
